{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6", "dom"],
    "target": "es6",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
